    </style>

    <style name="Theme.Spiice" parent="Base.Theme.Spiice" />

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@drawable/bg_input_field</item>
        <item name="shapeAppearanceMediumComponent">@drawable/bg_input_field</item>

    </style>

</resources>